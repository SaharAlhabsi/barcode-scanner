<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#286AB9C3"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="183dp"
        android:layout_height="153dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo3"
        tools:srcCompat="@drawable/logo3" />

    <TextView
        android:id="@+id/textInputLayoutUsername"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="اسم المستخدم "
        android:textColor="#5F6161"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/username"
        android:layout_width="207dp"
        android:layout_height="37dp"
        android:layout_marginTop="44dp"
        android:background="#B9F6FFFE"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#B3ADAD"
        app:layout_constraintEnd_toStartOf="@+id/textInputLayoutUsername"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:startIconDrawable="@android:drawable/ic_lock_power_off">

    </EditText>

    <TextView
        android:id="@+id/textInputLayoutPassword"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        android:text="كلمة المرور"
        android:textColor="#6C6E6E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutUsername" />

    <EditText
        android:id="@+id/password"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="#B9F6FFFE"
        android:drawableLeft="@android:drawable/ic_partial_secure"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/textInputLayoutPassword"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <Button
        android:id="@+id/login"
        android:layout_width="338dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:background="@color/colorTextHint"
        android:text="تسجيل الدخول"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/textViewLinkRegister"
        android:layout_width="308dp"
        android:layout_height="28dp"
        android:layout_marginTop="32dp"
        android:text="لا تملك حساب بعد؟ تسجيل حساب جديد"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.349"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login" />

</androidx.constraintlayout.widget.ConstraintLayout>
